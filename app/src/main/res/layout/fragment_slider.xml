<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slider_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_slider">


    <android.support.v4.view.ViewPager
        android:id="@+id/slider_fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/slider_fragment_lin_layout_Dots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_20"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


    <Button
        android:id="@+id/slider_fragment_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:text="@string/next"
        android:fontFamily="@font/cairo_bold"
        android:padding="@dimen/dim_3"
        android:textColor="@color/black"
        android:textSize="@dimen/font_16" />

    <Button
        android:id="@+id/slider_fragment_btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:text="@string/skip"
        android:fontFamily="@font/cairo_bold"
        android:padding="@dimen/dim_3"
        android:textColor="@color/black"
        android:textSize="@dimen/font_16" />

</RelativeLayout>
