<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gra">

    <LinearLayout
        android:id="@+id/donation_requests_fragment_lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_marginStart="@dimen/dim_10"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginEnd="@dimen/dim_10"
        android:background="@color/gra"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/articles_home_adapter_card_view_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_margin="@dimen/dim_3"
            android:layout_weight=".8"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dim_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dim_10"
                android:gravity="end">

                <Spinner
                    android:id="@+id/donation_requests_fragment_spin_blood_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_margin="@dimen/dim_3"
            android:layout_weight=".9"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dim_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:padding="@dimen/dim_10">

                <Spinner
                    android:id="@+id/donation_requests_fragment_spin_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/donation_requests_fragment_img_btn_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_margin="@dimen/dim_3"
            android:layout_weight=".3"
            app:srcCompat="@drawable/search_24" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/donation_requests_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gra"
        android:layout_below="@+id/donation_requests_fragment_lin1"
        android:layout_marginTop="@dimen/dim_1" />

   </RelativeLayout>