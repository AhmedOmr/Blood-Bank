<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/thick_blue"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:windowSoftInputMode="stateAlwaysHidden">

        <include
            layout="@layout/activity_home_app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.PopupOverlay"
            app:headerLayout="@layout/activity_home_nav_header_main"
            app:itemBackground="@drawable/drawer_item_layer"
            app:itemIconTint="@color/thick_blue"
            app:itemTextAppearance="@style/NavDrawerTextStyle"
            app:itemTextColor="@color/black"
            app:menu="@menu/activity_main_drawer" />

    <FrameLayout
        android:id="@+id/replaceframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:visibility="gone" />

</android.support.v4.widget.DrawerLayout>