<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gra"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <EditText
                    android:id="@+id/update_data_user_fragment_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:maxLength="25"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <EditText
                    android:id="@+id/update_data_user_fragment_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_50"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <TextView
                    android:id="@+id/update_data_user_fragment_txt_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/calendar_24"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/birthday_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/update_data_user_fragment_spin_blood_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_60"
                    android:layout_marginStart="@dimen/dim_10"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_10"
                    android:background="@drawable/bgspinrt"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerTheme" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <TextView
                    android:id="@+id/update_data_user_fragment_txt_last_don_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/calendar_24"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/last_dat_todonate"
                    android:textColor="@color/black"
                    android:padding="@dimen/dim_3"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/update_data_user_fragment_spin_gov"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_60"
                    android:background="@drawable/bgspinrt"
                    android:layout_marginStart="@dimen/dim_10"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_10"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerTheme" />

                <Spinner
                    android:id="@+id/update_data_user_fragment_spin_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_60"
                    android:layout_marginStart="@dimen/dim_10"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_10"
                    android:background="@drawable/bgspinrt"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerTheme" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <EditText
                    android:id="@+id/update_data_user_fragment_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/phon_numper"
                    android:inputType="phone"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray"
                app:passwordToggleDrawable="@drawable/passbackgr"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/thick_blue">
                <EditText
                    android:id="@+id/update_data_user_fragment_et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_regular"
                    android:hint="@string/enter_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray"
                app:passwordToggleDrawable="@drawable/passbackgr"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/thick_blue">

                <EditText
                    android:id="@+id/update_data_user_fragment_et_confirm_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/update_data_user_fragment_btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_50"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:background="@drawable/shape_edit_blue"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>