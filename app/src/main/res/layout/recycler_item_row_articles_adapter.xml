<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_6"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:layout_marginEnd="@dimen/dim_6"
    android:padding="@dimen/dim_4"
    android:background="@drawable/shape_edit">

    <RelativeLayout
        android:id="@+id/articles_home_adapter_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_4">

        <TextView
            android:id="@+id/articles_home_adapter_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_8"
            android:layout_marginStart="@dimen/dim_8"
            android:layout_toStartOf="@id/articles_adapter_rl_favourites"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/articles_adapter_rl_favourites"
            android:layout_width="@dimen/dim_38"
            android:layout_height="@dimen/dim_38"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_8"
            android:background="@drawable/shape_circle">

            <CheckBox
                android:id="@+id/articles_home_adapter_check_box_favorite"
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:layout_centerInParent="true"
                android:background="@drawable/like_button_background"
                android:button="@null" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/articles_home_adapter_img_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2"
        android:layout_marginTop="@dimen/dim_1"
        android:layout_below="@id/articles_home_adapter_rl1"
        android:background="@color/gray_dark" />

    <ImageView
        android:id="@+id/articles_home_adapter_img_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200"
        android:layout_below="@id/articles_home_adapter_img_line"
        android:layout_margin="@dimen/dim_2"
        android:padding="@dimen/dim_2"
        android:scaleType="fitXY"  />
</RelativeLayout>

</android.support.v7.widget.CardView>