<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gra"
    tools:context=".view.fragment.navCycle.NotificationsFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/notificationsFragmentShowPostRecyclerView"
        android:layout_margin="@dimen/dim_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/notification_fragment_tv_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/no_notificaation"
        android:textColor="@color/thick_blue"
        android:textSize="@dimen/font_16"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>