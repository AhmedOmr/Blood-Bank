<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_us_fragment_rl_sub_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gra">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/call_us_fragment_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragmentCallMeLogo"
                android:layout_width="@dimen/dim_150"
                android:layout_height="@dimen/dim_150"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_8"
                android:src="@drawable/logo256" />

            <RelativeLayout
                android:id="@+id/fragment_call_us_rl_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_80"
                android:layout_below="@id/fragmentCallMeLogo"
                android:layout_marginTop="@dimen/dim_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edit">

                        <ImageView
                            android:id="@+id/fragmentCallMePhone"
                            android:layout_width="@dimen/dim_30"
                            android:layout_height="@dimen/dim_30"
                            android:layout_alignTop="@+id/contact_us_fragment_txt_phone"
                            android:layout_alignBottom="@+id/contact_us_fragment_txt_phone"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/dim_8"
                            android:layout_marginBottom="@dimen/dim_8"
                            android:src="@drawable/call_me" />

                        <TextView
                            android:id="@+id/contact_us_fragment_txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:layout_marginEnd="@dimen/dim_2"
                            android:layout_toEndOf="@id/fragmentCallMePhone"
                            android:gravity="center"
                            android:padding="@dimen/dim_2"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14"
                            android:fontFamily="@font/cairo_semi_bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:layout_marginTop="@dimen/dim_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edit">

                        <ImageView
                            android:id="@+id/fragment_call_us_iv_email_image"
                            android:layout_width="@dimen/dim_30"
                            android:layout_height="@dimen/dim_30"
                            android:layout_alignTop="@+id/contact_us_fragment_txt_mail"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/dim_8"
                            android:layout_marginBottom="@dimen/dim_8"
                            android:src="@drawable/contact_36" />

                        <TextView
                            android:id="@+id/contact_us_fragment_txt_mail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_40"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:layout_marginEnd="@dimen/dim_2"
                            android:layout_toEndOf="@id/fragment_call_us_iv_email_image"
                            android:gravity="center"
                            android:padding="@dimen/dim_2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14"
                            android:fontFamily="@font/cairo_semi_bold" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_call_us_ll_social_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_call_us_rl_container"
                android:layout_marginTop="@dimen/dim_15"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_call_us_iv_social_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_gmail" />

                <ImageView
                    android:id="@+id/fragment_call_us_iv_social_what_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_15"
                    android:src="@drawable/icon_whats" />

                <ImageView
                    android:id="@+id/fragment_call_us_iv_social_instgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_15"
                    android:src="@drawable/icon_instagram" />

                <ImageView
                    android:id="@+id/fragment_call_us_iv_social_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_15"
                    android:src="@drawable/icon_youtube" />

                <ImageView
                    android:id="@+id/fragment_call_us_iv_social_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_15"
                    android:src="@drawable/icon_tewiter" />

                <ImageView
                    android:id="@+id/fragment_call_us_iv_social_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_15"
                    android:src="@drawable/icon_face" />

            </LinearLayout>

            <TextView
                android:id="@+id/call_us_fragment_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_call_us_ll_social_container"
                android:layout_margin="@dimen/dim_8"
                android:background="@drawable/shape_edit_blue"
                android:gravity="center_vertical"
                android:padding="@dimen/dim_8"
                android:text="@string/contact_us"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/cairo_bold"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_below="@id/call_us_fragment_tv_title"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <EditText
                    android:id="@+id/contact_us_fragment_et_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:maxLines="1"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:hint="@string/title"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinput2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:layout_below="@id/tinput1"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_10"
                android:background="@drawable/shape_edit"
                android:paddingStart="@dimen/dim_8"
                android:paddingTop="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_4"
                android:textColorHint="@color/gray">

                <EditText
                    android:id="@+id/contact_us_fragment_et_massage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:maxLines="3"
                    android:padding="@dimen/dim_3"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:hint="@string/message"
                    android:textSize="@dimen/font_16" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/contact_us_fragment_btn_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_60"
                android:layout_below="@id/tinput2"
                android:layout_margin="@dimen/dim_8"
                android:background="@drawable/shape_edit_blue"
                android:gravity="center_vertical"
                android:text="@string/btn_sendmssg"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/cairo_bold"
                android:textSize="@dimen/font_16" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>