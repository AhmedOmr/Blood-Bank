<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck_320_480"
    android:orientation="vertical"
    tools:context=".view.fragment.loginCycle.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/change_password_fragment_img_logo_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_180"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_50"
            android:src="@drawable/logo256" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_10"
            android:text="@string/text_chang_Pasword"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_password_fragment_et_pin_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit"
            android:hint="@string/validit_code"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="@dimen/dim_10" />

        <EditText
            android:id="@+id/change_password_fragment_et_new_pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:hint="@string/new_password"
            android:padding="@dimen/dim_10" />

        <EditText
            android:id="@+id/change_password_fragment_et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:hint="@string/confirm_password"
            android:padding="@dimen/dim_10" />

        <Button
            android:id="@+id/change_password_fragment_btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_50"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit_green"
            android:text="@string/btt_chang_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>
</ScrollView>

