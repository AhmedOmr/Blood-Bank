<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bck_320_480"
    android:orientation="vertical"
    tools:context=".view.fragment.loginCycle.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/change_password_fragment_img_logo_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_180"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_50"
            android:src="@drawable/logo256" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_10"
            android:text="@string/text_chang_Pasword"
            android:fontFamily="@font/cairo_bold"
            android:padding="@dimen/dim_3"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tinput1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit"
            android:paddingStart="@dimen/dim_8"
            android:paddingTop="@dimen/dim_4"
            android:paddingEnd="@dimen/dim_8"
            android:paddingBottom="@dimen/dim_4"
            android:textColorHint="@color/gray">
        <EditText
            android:id="@+id/change_password_fragment_et_pin_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fontFamily="@font/cairo_bold"
            android:hint="@string/validit_code"
            android:padding="@dimen/dim_3"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tinput2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_8"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit"
            android:paddingStart="@dimen/dim_8"
            android:paddingTop="@dimen/dim_4"
            android:paddingEnd="@dimen/dim_8"
            android:paddingBottom="@dimen/dim_4"
            android:textColorHint="@color/gray"
            app:passwordToggleDrawable="@drawable/passbackgr"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/thick_blue">

        <EditText
            android:id="@+id/change_password_fragment_et_new_pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit"
            android:fontFamily="@font/cairo_bold"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:padding="@dimen/dim_3"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tinput3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit"
            android:paddingStart="@dimen/dim_8"
            android:paddingTop="@dimen/dim_4"
            android:paddingEnd="@dimen/dim_8"
            android:paddingBottom="@dimen/dim_4"
            android:textColorHint="@color/gray"
            app:passwordToggleDrawable="@drawable/passbackgr"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/thick_blue">

            <EditText
                android:id="@+id/change_password_fragment_et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fontFamily="@font/cairo_bold"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:padding="@dimen/dim_3"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/change_password_fragment_btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_50"
            android:layout_marginEnd="@dimen/dim_10"
            android:background="@drawable/shape_edit_green"
            android:text="@string/btt_chang_password"
            android:fontFamily="@font/cairo_bold"
            android:padding="@dimen/dim_3"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</ScrollView>

